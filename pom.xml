            </dependency>
            <dependency>
                <groupId>pers.hubery</groupId>
                <artifactId>accountcenter-infra-dal</artifactId>
                <version>${accountcenter.version}</version>
            </dependency>
            <dependency>
                <groupId>pers.hubery</groupId>
                <artifactId>accountcenter-test</artifactId>
